{
  "name": "plesk-template",
  "version": "1.0.0",
  "description": "A comprehensive GitHub repository template for Plesk projects and server management tools",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'Build completed successfully!'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "clean": "echo 'Clean completed'",
    "install:clean": "npm run clean && npm install"
  },
  "keywords": [
    "template",
    "github",
    "open-source",
    "plesk",
    "repository-template"
  ],
  "author": "samanad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samanad/plesk.git"
  },
  "bugs": {
    "url": "https://github.com/samanad/plesk/issues"
  },
  "homepage": "https://github.com/samanad/plesk#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.0",
    "jest": "^29.6.0",
    "lint-staged": "^14.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {},
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
